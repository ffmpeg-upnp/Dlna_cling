    <style name="Preference" parent="@style/AppBaseTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:windowBackground">@color/bg_white</item>
        <item name="android:windowTitleBackgroundStyle">@color/bg_white</item>
        <item name="android:listViewStyle">@color/bg_white</item>
        <item name="android:background">@color/bg_white</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/bg_status</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowBackground">@color/bg_window</item>
    </style>
