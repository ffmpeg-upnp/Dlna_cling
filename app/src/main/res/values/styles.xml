<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
     <style name="MMTabButton">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/bg_checkbox_menus</item>
        <item name="android:paddingTop">7.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="Preference" parent="@style/AppBaseTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:windowBackground">@color/bg_white</item>
        <item name="android:windowTitleBackgroundStyle">@color/bg_white</item>
        <item name="android:listViewStyle">@color/bg_white</item>
        <item name="android:background">@color/bg_white</item>
    </style>
    
     <style name="dot_style">
        <item name="android:layout_width">5dip</item>
        <item name="android:layout_height">5dip</item>
        <item name="android:background">@drawable/drawable_point_indicator</item>
        <item name="android:layout_marginLeft">1.5dip</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginRight">1.5dip</item>
    </style>
</resources>
